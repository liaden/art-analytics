<!DOCTYPE html>
<html>
<head>
  <title>ArtAnalytics</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= Gon::Base.render_data %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <%= render 'shared/navbar' %>

  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
      <% if flash[:notice] -%>
        <div class="alert alert-info" role="alert"><%= flash[:notice] %></div>
      <% end -%>

      <% if flash[:error] -%>
        <div class="alert alert-success" role="alert"><%= flash[:error] %></div>
      <% end -%>

      <% if flash[:alert] -%>
        <div class="alert alert-warning" role="alert"><%= flash[:alert] %></div>
      <% end -%>

      </div>
    </div>
  </div>

  <%= yield %>

</body>
</html>
